{{!< default}}

<main class="site-content" role="main">

  {{#foreach posts}}

  <article class="{{post_class}}" data-permalink="{{url absolute="true"}}">

    <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>

    <aside>
      <div class="post-data">
        <p>
          Posted on <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time>
          {{#if author}}by {{author.name}}{{/if}}
        </p>
      </div>
    </aside>

    <section class="post-content rte">
      {{excerpt words="150"}} &hellip; [+]
      <div>
        <a class="read-more" href="{{url}}">Read more</a>
      </div>
    </section>

    <footer class="post-footer">

      {{#if tags}}
      <div class="post-tags">
        <strong>Tags:</strong> {{tags separator=" , "}}
      </div>
      {{/if}}

    </footer>

  </article>

  {{/foreach}}

  {{pagination}}

</main>