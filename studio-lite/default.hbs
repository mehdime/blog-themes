<html>
<head>
  <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <link href='//fonts.googleapis.com/css?family=Lato:400italic,600italic,700italic,400,700,600' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Libre+Baskerville:400' rel='stylesheet' type='text/css'>

  {{ghost_head}}
</head>

<body class="{{body_class}}">

  <header class="site-header {{#if @blog.cover}}has-background{{/if}}" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>

    {{#if @blog.cover}}
      <div class="header-overlay"></div>
    {{/if}}

    <div class="header-content">
      {{#if @blog.logo}}
        <h1 class="logo">
          <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo" /></a>
        </h1>
      {{else}}
        <h1 class="no-logo"><a href="/">{{@blog.title}}</a></h1>
      {{/if}}

      <div class="blog-description rte">
        {{@blog.description}}
      </div>

      {{nav}}
    </div>

  </header>

  {{{body}}}

  <footer class="site-footer {{#if @blog.cover}}header-has-background{{/if}}">
    <p>Subscribe via <a href="{{@blog.url}}/rss/">RSS</a></p>
    <p>Proudly published with <a href="http://tryghost.org">Ghost</a></p>
  </footer>

  {{ghost_foot}}

  <script type="text/javascript" src="/js/plugins.js"></script>
  <script type="text/javascript" src="/js/site.js"></script>

  <script type="text/javascript">
    var themeTitle = "Studio Lite Theme";
    var url = "http://studio-lite-theme.ghostify.io";
    (function() {
        var pxu = document.createElement('script'); pxu.type = 'text/javascript'; pxu.async = true; pxu.src = 'http://cdn.pixelunion.net/customize/pxucm.js';
        var isDemo = (window.location.href.indexOf(url) >= 0);
        (isDemo) && ((document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(pxu));
    })();
  </script>
</body>
