<body class="{{body_class}}">

  <header class="site-header {{#if @blog.cover}}has-background{{/if}}" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>

    {{#if @blog.cover}}
      <div class="header-overlay"></div>
    {{/if}}

    <div class="header-content">
      {{#if @blog.logo}}
        <h1 class="logo">
          <a href="{{@blog.url}}" title="Blog Home"><img src="{{@blog.logo}}" alt="Logo" /></a>
        </h1>
        <h1 class="title-with-logo"><a href="{{@blog.url}}" title="Blog Home">{{@blog.title}}</a></h1>
      {{else}}
        <h1 class="no-logo"><a href="/">{{@blog.title}}</a></h1>
      {{/if}}

      <div class="blog-description rte">
        {{@blog.description}}
      </div>

      <nav>
        <ul>
          <li>
            <a href="https://github.com/mehdime">github</a>
          </li>
          <li>
            <a href="https://twitter.com/mehdielgueddari">twitter</a>
          </li>
          <li>
            <a href="https://www.linkedin.com/in/mehdielgueddari">linkedin</a>
          </li>
          <li>
            <a href="mailto:emehdi@gmail.com">contact</a>
          </li>
        </ul>
      </nav>

      {{nav}}
    </div>

  </header>

  {{{body}}}

  <footer class="site-footer {{#if @blog.cover}}header-has-background{{/if}}">
    <p>Subscribe via <a href="{{@blog.url}}/rss/">RSS</a></p>
    <p>Proudly published with <a href="http://tryghost.org">Ghost</a></p>
  </footer>

  {{ghost_foot}}

  <script type="text/javascript" src="/js/plugins.js"></script>
  <script type="text/javascript" src="/js/site.js"></script>
  <script type="text/javascript" src="/js/prism.js"></script>

</body>
</html>
